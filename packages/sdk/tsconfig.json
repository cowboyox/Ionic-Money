{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "target": "ES2015",
    "rootDirs": ["./src", "./tests", "./tasks"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "artifacts/*": ["./artifacts/*"],
      "typechain/*": ["./typechain/*"]
    }
  },
  "exclude": [
    "./dist/cjs/**/*",
    "./dist/esm/**/*",
    "./node_modules/**/*"
  ],
  "include": ["./src/**/*", "./tests/**/*", "./tasks/**/*", "./artifacts/**/*.json"]
}
